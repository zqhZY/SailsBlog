<div class="body-sign" >
    <!--login body-->


    <div class="container" ng-app="inputInvalid"  ng-controller="validateCtrl">
        <div class="row">

            <div class="col-md-6 col-md-offset-3 text-center login-header"  >
                <h1>Register Account</h1>
            </div>
            <div class="col-md-6 col-md-offset-3 alert alert-danger alert-dismissible" ng-show="invalid_account">
                <!--<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>-->
                <strong>Note:</strong> Email has been existed, please try another one again.
            </div>
            <div class="col-md-6 col-md-offset-3 panel-default " >

                <form method="post" ng-submit="registerCheck()"  name="registerForm" novalidate>
                    <p class="login-text">
                        Username
                    </p>
                    <p class="input-group">
                         <span class="input-group-addon">
                             <span class="glyphicon glyphicon-user"></span>
                         </span>
                        <input type="text" class="form-control input-lg " name="username" ng-model="username"
                               placeholder="enter nickname here" required>
                    </p>
                    <span style="color: red" ng-show="registerForm.username.$dirty && registerForm.username.$invalid">
                            <span ng-show="registerForm.username.$error.required">
                                Username must not empty!
                            </span>
                    </span>

                    <p class="login-text">
                        Email
                    </p>
                    <p class="input-group">
                         <span class="input-group-addon">
                             <span class="glyphicon glyphicon-envelope"></span>
                         </span>
                        <input type="email" class="form-control input-lg " name="email" ng-model="email"
                               placeholder="enter your email here" required>
                    </p>

                    <span style="color:red" ng-show="registerForm.email.$dirty && registerForm.email.$invalid">
                        <span ng-show="registerForm.email.$error.required">
                            Email must not empty!
                        </span>
                        <span ng-show="registerForm.email.$error.email">
                            Invalid email!
                        </span>
                    </span>

                    <p class="login-text">
                        Password
                    </p>
                    <p class="input-group">
                         <span class="input-group-addon">
                             <span class="glyphicon glyphicon-pencil"></span>
                         </span>
                        <input type="password" class="form-control input-lg" name="password" ng-model="password"
                               placeholder="enter password here" required>
                    </p>
                    <span style="color: red" ng-show="registerForm.password.$dirty && registerForm.password.$invalid">
                            <span ng-show="registerForm.password.$error.required">
                                Password must not empty!
                            </span>
                    </span>

                    <p class="">
                        <button type="submit" class="btn btn-success btn-lg bt-sign"
                        ng-disabled="registerForm.username.$invalid || registerForm.email.$invalid ||
                            registerForm.password.$invalid">
                            Create a account
                        </button>
                    </p>
                </form>
            </div>

            <div class="col-md-6 col-md-offset-3"  >
                <p class="help-block" ng-show="!regSuccess">
                    If you click the button above,you will create a admin account for yourself.
                </p>
                <p ng-show="regSuccess">
                    Register success, <a href="/login">login now</a>.

                </p>
            </div>
        </div>
    </div>
    <!--login body end-->
</div>
