    <form action="/update_post.json" method="POST" role="form" class="admin-form form-horizontal" enctype="multipart/form-data">



        <hr>

        <% _.each(updatepost, function (post) { %>
        <input name="postid" value="<%= post.id %>" type="hidden">

        <div class="form-group">
            <label for="name" class="col-md-2 control-label">Title
                &nbsp;
            </label>
            <div class="col-md-10">
                <input class="form-control" id="name" name="title" type="text" value="<%= post.title %>">

            </div>

        </div>

        <div class="form-group">
            <label for="name" class="col-md-2 control-label">Author
                &nbsp;
            </label>
            <div class="col-md-10">

                <input class="form-control" id="name" name="author" type="text" value="<%= post.author %>">

            </div>

        </div>


        <div class="form-group">
            <label for="title" class="col-md-2 control-label">imagePath
                &nbsp;
            </label>
            <div class="col-md-10">

                <input class="form-control" id="title" name="imagePath" type="text" value="<%= post.imagePath %>">


            </div>

        </div>


        <div class="form-group">
            <label for="text" class="col-md-2 control-label">Detail

                <strong style="color: red">*</strong>
            </label>
            <div class="col-md-10">

                <textarea class="form-control" id="text" name="detail" >
                    <%= post.detail %>
                </textarea>


            </div>

        </div>


        <div class="form-group">
            <label for="text" class="col-md-2 control-label">Content

                <strong style="color: red">*</strong>
            </label>
            <div class="col-md-10">

                <textarea class="form-control" id="text" name="Content">
                    <%= post.Content %>
                </textarea>


            </div>

        </div>


        <div class="form-group">
            <label for="date" class="col-md-2 control-label">Date
                &nbsp;
            </label>
            <div class="col-md-10">

                <input class="form-control" data-date-format="YYYY-MM-DD HH:mm:ss"
                       data-role="datetimepicker" id="date" name="createtime" type="text" value="<%= post.createtime %>">


            </div>

        </div>

        <% }) %>



        <hr>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 submit-row">
                <input class="btn btn-primary" value="Save" type="submit">


                <input name="_add_another" class="btn btn-default" value="Save and Add Another" type="submit">
                <input name="_continue_editing" class="btn btn-default" value="Save and Continue Editing" type="submit">



                <a href="http://examples.flask-admin.org/sqla/simple/admin/post/" class="btn btn-danger" role="button">Cancel</a>

            </div>
        </div>


    </form>



